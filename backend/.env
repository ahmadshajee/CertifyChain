# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection (Use MongoDB Atlas free tier or local)
# Local: mongodb://localhost:27017/accredchain
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/accredchain
MONGODB_URI=mongodb://localhost:27017/accredchain

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
