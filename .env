# accredchain Environment Variables

# Pinata IPFS Configuration (Get free keys at https://app.pinata.cloud/)
REACT_APP_PINATA_API_KEY=your_pinata_api_key
REACT_APP_PINATA_SECRET_KEY=your_pinata_secret_key
REACT_APP_PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs

# Smart Contract Addresses (Auto-updated after deployment)
REACT_APP_CREDENTIAL_NFT_ADDRESS=
REACT_APP_INSTITUTION_REGISTRY_ADDRESS=

# Network Configuration (localhost for development)
REACT_APP_CHAIN_ID=31337
REACT_APP_NETWORK_NAME=Hardhat Local

# Backend API URL
REACT_APP_API_URL=http://localhost:5000/api

# For Sepolia Testnet deployment (optional - get free ETH from faucet)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your_wallet_private_key
ETHERSCAN_API_KEY=your_etherscan_api_key
